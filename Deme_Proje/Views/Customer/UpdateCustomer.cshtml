@model EntityLayer.Concrete.Customer;
@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-3">
    <h1>Müşteri Güncelleme Sayfası</h1>
</div>
@using (Html.BeginForm("UpdateCustomer", "Customer", FormMethod.Post))
{
    <div class="mt-3">
        <label>Id:</label>
         @Html.TextBoxFor(x=>x.Id, new {@class="form-control",@readonly="readonly"})
    </div>
    <div class="mt-3">
        <label>İsim:</label>
        @Html.TextBoxFor(x=>x.Name, new {@class="form-control"})
        <div style="color:Red">
            @Html.ValidationMessageFor(x=>x.Name)
        </div>
    </div>
    <div class="mt-3">
        <label>Şehir:</label>
        @Html.TextBoxFor(x=>x.Country, new {@class="form-control"})
        <div style="color:red">
            @Html.ValidationMessageFor(x=>x.Country)
        </div>
    </div>
    <div class="mt-3">
        <label>Meslek:</label>
        @Html.DropDownListFor(x=>x.JobId, (List<SelectListItem>)ViewBag.Job, "Lütfen bir meslek seçiniz", new {@class="form-control",@required="required"})
    </div>
    <div class="mt-3">
        <button class="btn btn-success">Müşteri Güncelle</button>
    </div>
}

